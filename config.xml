<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="io.cordova.myappride_along" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" defaultlocale="en-US">
  <name>Ride Along</name>
  <description>A Carpool App that allows users to contact others for a ride into town</description>
  <author href="http://cordova.io" email="sylvia.engmann8@gmail.com">Sylvia</author>
  <content src="index.html" />

  <access origin="*" />
  <vs:features />
  <preference name="SplashScreen" value="screen" />
  <preference name="windows-target-version" value="8.1" />

  <!-- Support for Cordova 5.0.0 plugin system -->
  <plugin name="cordova-plugin-whitelist" version="1" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <platform name="android">
    <allow-intent href="market:*" />
  </platform>

  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  
  <platform name="android">
    <icon src="ridealong.png" density="ldpi" />
    <icon src="ridealong.png" density="mdpi" />
    <icon src="ridealong.png" density="hdpi" />
    <icon src="ridealong.png" density="xhdpi" />
  </platform>


  <platform name="wp8">
    <icon src="res/icons/wp8/ApplicationIcon.png" width="99" height="99" />          
    <icon src="res/icons/wp8/Background.png" width="159" height="159" />
  </platform>
<platform name="android">
    <splash src="ridealong.png" density="land-hdpi"/>
    <splash src="ridealong.png" density="land-ldpi"/>
    <splash src="ridealong.png" density="land-mdpi"/>
    <splash src="ridealong.png" density="land-xhdpi"/>
    
    <splash src="ridealong.png" density="port-hdpi"/>
    <splash src="ridealong.png" density="port-ldpi"/>
    <splash src="ridealong.png" density="port-mdpi"/>
    <splash src="ridealong.png" density="port-xhdpi"/>
  </platform>


  <platform name="wp8">
    <splash src="res/screens/wp8/SplashScreenImage.png" width="768" height="1280"/>
  </platform>
  <plugin name="cordova-plugin-camera"  />
  <plugin name="cordova-plugin-contacts"  />
  <plugin name="cordova-plugin-media-capture" />
  <plugin name="cordova-plugin-compat" />
  <plugin name="cordova-plugin-file"  />
  <plugin name="cordova-plugin-geolocation" />
  <plugin name="cordova-plugin-splashscreen"/>
</widget>
